---
import Badge from "../components/Badge.astro";
import Linkedin from "../icons/Social/Linkedin.astro";
import Github from "../icons/Social/Github.astro";
import Social_icons from "../components/Social_icons.astro";
import Gmail from "../icons/Social/Gmail.astro";
import Section from "../components/Section.astro";
import Code from "../icons/Titulos/Code.astro";
import Proyectos from "../components/Proyectos.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Portfolio de Diego - Programador Full-Stack</title>
  </head>

  <body>
    <div class="background"></div>
    <main class="px-4">
      <Section>
        <img
          class="rounded-full w-20 h-30 mb-4"
          src="/src/img/Diego.jpg"
          alt="Diego"
        />
        <h1
          class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-5 pb-6 lg:pb-10"
        >
          Hola, Soy Diego
          <a
            href="https://www.linkedin.com/in/diego-bernachea"
            target="_blank"
            rel="noopener"
          >
            <div
              class="flex justify-center items-center hover:scale-110 transition"
            >
              <Badge> Open To Work </Badge>
            </div><a></a></a
          >
          <h2 class="text-xl lg:text-2xl opacity-80 text-pretty max-w-{700px}">
            <span class="text-blue-300">Programador Full-Stack.</span>
            <br />Tengo 20 años, soy de Lima, Perú. Soy un desarrollador backend
            apasionado por la tecnología y el aprendizaje continuo. Mi objetivo
            es contribuir en proyectos innovadores con soluciones creativas y
            eficientes.
          </h2>
          <nav class="flex gap-x-5 mt-6 flex-wrap">
            <Social_icons href="https://www.linkedin.com/in/diego-bernachea">
              <Linkedin class="size-4 md:size-6" />
              LinkedIn
            </Social_icons>
            <Social_icons href="https://github.com/DiegoBernacheaRojas">
              <Github class="size-4 md:size-6" />
              GitHub
            </Social_icons>
            <Social_icons href="mailto:diego.bernachea.r@gmail.com">
              <Gmail class="size-4 md:size-6" />
              diego.bernachea.r@gmail.com
            </Social_icons>
          </nav>
        </h1>
        <Section id="proyectos">
          <div class="flex justify-center">
            <h2
              class="text-4xl font-semibold pb-10 flex gap-x-3 items-center text-center mb-4"
            >
              <Code class="size-8" />Proyectos
            </h2>
          </div>
          <Proyectos />
        </Section>

        <Footer />
      </Section>
    </main>
  </body>

  <style is:global>
    :root {
      color-scheme: dark;
    }
    html {
      font-family: "Source Code Pro Variable", monospace;
      scroll-behavior: smooth;
    }
    body {
      background: #171717;
      color: #fff;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }
    .background {
      position: fixed; /* Cambié de absolute a fixed */
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -10;

      background: radial-gradient(
        circle 500px at 50% 200px,
        #3e3e3e,
        transparent
      );

      filter: blur(100px); /* Aplica el desenfoque */
    }
    @media (prefers-reduced-motion: reduce) {
      html {
        scroll-behavior: auto;
      }
    }
  </style>
</html>
