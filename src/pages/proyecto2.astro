  <style is:global>
    :root {
      color-scheme: dark;
    }
    html {
      font-family: "Source Code Pro Variable", monospace;
      scroll-behavior: smooth;
    }
    body {
      background: #171717;
      color: #fff;
      display: flex;
      flex-direction: column;
