  <style is:global>
    :root {
      color-scheme: dark;
    }
    html {
      font-family: "Source Code Pro Variable", monospace;
      scroll-behavior: smooth;
    }
    body {
      background: #171717;
      color: #fff;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }
    .background {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -10;
      background: radial-gradient(circle 500px at 50% 200px, #3e3e3e, transparent);
      filter: blur(100px);
    }
    h1 {
      text-align: center;
      font-size: 2.5rem;
      margin-bottom: 1rem;
      color: #e0e0e0;
      border-bottom: 2px solid #555;
      padding-bottom: 0.5rem;
    }
    h2 {
      text-align: center;
      font-size: 2rem;
      margin-bottom: 1rem;
      color: #ccc;
      border-bottom: 1px solid #444;
      padding-bottom: 0.5rem;
    }
    figure {
      text-align: center;
      margin-bottom: 5rem;
    }
    img {
      display: block;
      margin: 0 auto;
      max-width: 100%;
      border-radius: 8px;
    }
    figcaption {
      margin-top: 0.5rem;
      font-size: 0.9rem;
      color: #bbb;
    }
    @media (prefers-reduced-motion: reduce) {
      html {
        scroll-behavior: auto;
      }
    }
  </style>
